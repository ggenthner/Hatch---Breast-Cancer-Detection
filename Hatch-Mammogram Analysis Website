    <script>
        async function analyzeMammogram() {
            const fileInput = document.getElementById('mammogramInput');
            const file = fileInput.files[0];
            const resultDiv = document.getElementById('result');

            if (!file) {
                resultDiv.innerHTML = "Please upload a mammogram image.";
                return;
            }

            rf = Roboflow(api_key="5tUPtX9wA9JoY7OuiQeN")
            project = rf.workspace("hatch-cell-struture").project("my-first-project-epj8p-sjzvo/2")

            const API_KEY = "5tUPtX9wA9JoY7OuiQeN";
            const ENDPOINT = "https://classify.roboflow.com/my-first-project-epj8p-sjzvo/1";

            const formData = new FormData();
            formData.append("file", file);

            try {
                resultDiv.innerHTML = "Analyzing...";

                const response = await fetch(`${https://classify.roboflow.com/my-first-project-epj8p-sjzvo/1}?api_key=${5tUPtX9wA9JoY7OuiQeN}`, {
                    method: "POST",
                    body: formData
                });

                if (!response.ok) {
                    throw new Error("API request failed");
                }

                const data = await response.json();
                console.log(data);

                const prediction = data.predictions[0];
                const label = prediction.class;
                const confidence = (prediction.confidence * 100).toFixed(2);

                resultDiv.innerHTML = `Result: ${label} (Confidence: ${confidence}%)`;
            } catch (error) {
                resultDiv.innerHTML = "Error analyzing the mammogram. Please try again.";
                console.error(error);
            }
        }
    </script>
</body>
